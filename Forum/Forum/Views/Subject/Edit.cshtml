@model Forum.Models.Subject
@{
    ViewBag.Title = "Editare subiect";
}


<h1> @ViewBag.message </h1>
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Subject", method: FormMethod.Post, routeValues: new
{
    id = Model.SubjectId
}))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.ValidationSummary(false, "Erori de validare", new { @class = "text-danger" })


    @Html.LabelFor(m => m.Title)
    <br />
    @Html.EditorFor(m => m.Title)
    <br />
    @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })


    @Html.LabelFor(m => m.Description)
    <br />
    @Html.EditorFor(m => m.Description)
    <br />
    @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
    <br />


    @Html.Label("Category")
    <br />
    @Html.DropDownListFor(
        m => m.CategoryId, 
        new SelectList(ViewBag.CategoryList, "Value", "Text"), 
        "Select the category", 
        new { @class = "form-control" }
    )

    <br />

    <br />
    <button class="btn btn-success" type="submit">Modifica subiectul</button>
}

