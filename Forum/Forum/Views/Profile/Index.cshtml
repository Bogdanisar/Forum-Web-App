@{
    ViewBag.Title = "User profile";
}

<div class="profile_class">
    <p class="profile_p">
        <br />
        <i class="glyphicon glyphicon-user"></i> @ViewBag.Profile.Name
        <br />
        <i class="glyphicon glyphicon-map-marker"></i> @ViewBag.Profile.City
        <br />
        <i class="glyphicon glyphicon-envelope"></i> @ViewBag.UserEmail
        <br />
        <i class="glyphicon glyphicon-book"></i> @ViewBag.SubjectNumber
        <i class="glyphicon glyphicon-comment"></i> @ViewBag.CommentNumber
        <br />
        <i class="glyphicon glyphicon-gift"></i> @ViewBag.Profile.Birthday
    </p>

    @if (Request.IsAuthenticated && (User.IsInRole("Administrator") || User.IsInRole("Moderator") || ViewBag.UserId == ViewBag.Profile.ProfileId))
    {
        <a class="btn btn-success" href="/Profile/Edit/@ViewBag.Profile.ProfileId">Edit Profile</a>
    }
</div>
