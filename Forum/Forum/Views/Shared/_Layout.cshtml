<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote.css" rel="stylesheet">
    @Styles.Render("~/Content/Toast.css")
    @Scripts.Render("~/Content/Toast.js")
</head>
<body id="custom">
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Treddi", "Index", "Category", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")


                @if (User.IsInRole("Administrator"))
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin Menu<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/Category/Index">Category Index</a></li>
                                <li><a href="/Subject/Index">Subject Index</a></li>
                                <li><a href="/Comment/Index">Comment Index</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="/Users/Index">Users</a></li>
                            </ul>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">

        @if (ViewBag.message != null)
        {
            <script>displayToast(`@ViewBag.message`);</script>
        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Treddi</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote.js"></script>
    @Scripts.Render("~/Scripts/Summernote.js");

    <script>
        $(".dropdown-category-delete").click(function (e) {
            e.preventDefault();
            $(this).closest(".category-wrapper").find('form').submit();
        });
    </script>
</body>
</html>
