@model Forum.Models.Category
@{
    ViewBag.Title = "Editare categorie";
}

<h2>@ViewBag.Title</h2>

@*<form method="post" action="/Category/Edit/@Model.CategoryId">*@
@using (Html.BeginForm(actionName: "Edit", controllerName: "Category", method: FormMethod.Post, routeValues: new
{
    id = Model.CategoryId
}))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.ValidationSummary(false, "Erori de validare", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.CategoryId)

    @*<label>Nume categorie</label>*@
    @Html.LabelFor(m => m.CategoryName)
    <br />
    @*<input type="text" name="CategoryName" value="@ViewBag.Category.CategoryName" />*@
    @Html.EditorFor(m => m.CategoryName)
    <br />
    @Html.ValidationMessageFor(m => m.CategoryName, null, new { @class = "text-danger" })
    <br />

    <br />
    <button class="btn btn-success" type="submit">Modifica categoria</button>
@*</form>*@
}

